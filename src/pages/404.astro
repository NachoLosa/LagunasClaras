---
import Button from '@/components/Button.astro';
import SeoHead from '@/components/SeoHead.astro';
import Layout from '@/layouts/Layout.astro';

const SeoContent = {
  title: 'Página no encontrada | Lagunas Claras',
  description: 'La página que buscas no existe o ha sido movida.',
};
const Content404 = {
  code: '404',
  title: '¡Ups! Página no encontrada',
  description:
    'La página que buscas no existe o ha sido movida. No te preocupes, podemos ayudarte a encontrar lo que necesitas.',
  homeButton: 'Volver al inicio',
  contactButton: 'Contáctanos',
  usefulLinks: 'Páginas útiles:',
  links: [
    { href: '/#servicios', text: 'Servicios' },
    { href: '/#quienes-somos', text: 'Nosotros' },
    { href: '/#faq', text: 'Preguntas Frecuentes' },
  ],
};
---

<Layout>
  <SeoHead title={SeoContent.title} description={SeoContent.description} />
  <Fragment slot="main">
    <div class="mt-36 flex min-h-[70vh] items-center justify-center px-4">
      <div class="text-center">
        <!-- Animated water drop illustration -->
        <div class="relative mx-auto mb-8 flex h-36 w-36 items-center justify-center">
          <div
            class="bg-primary/20 absolute inset-0 animate-ping rounded-full"
            style="animation-duration: 2s;"
          >
          </div>
          <div class="from-primary to-accent relative rounded-full bg-linear-to-br p-8 shadow-2xl">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="h-32 w-32 text-white"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15.182 15.182a4.5 4.5 0 0 1-6.364 0M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0ZM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75Zm-.375 0h.008v.015h-.008V9.75Zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75Zm-.375 0h.008v.015h-.008V9.75Z"
              ></path>
            </svg>
          </div>
        </div>

        <!-- Error code -->
        <div class="mb-6">
          <h1 class="text-primary mb-4 text-8xl font-bold md:text-9xl">{Content404.code}</h1>
          <h2 class="text-foreground mb-2 text-2xl font-semibold md:text-3xl">
            {Content404.title}
          </h2>
        </div>

        <!-- Description -->
        <div class="mx-auto mb-8 max-w-md">
          <p class="text-muted-foreground">
            {Content404.description}
          </p>
        </div>

        <!-- Action buttons -->
        <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
          <Button href="/" icon={false}>{Content404.homeButton}</Button>
          <Button href="/#contacto" icon={false} variant="secondary"
            >{Content404.contactButton}</Button
          >
        </div>
      </div>

      <!-- Helpful links -->
      <div class="m-12">
        <p class="text-muted-foreground mb-4 text-sm font-medium">{Content404.usefulLinks}</p>
        <div class="flex flex-wrap justify-center gap-4">
          {
            Content404.links.map((link, index) => (
              <>
                <a href={link.href} class="text-primary hover:underline">
                  {link.text}
                </a>
                {index < Content404.links.length - 1 && (
                  <span class="text-muted-foreground">•</span>
                )}
              </>
            ))
          }
        </div>
      </div>
    </div>
  </Fragment>
</Layout>
