---
import SeoHead from '../components/SeoHead.astro';
import Layout from '../layouts/Layout.astro';

const SeoContent = {
  title: 'Preguntas Frecuentes | Lagunas Claras',
  description:
    'Respuestas a las preguntas más frecuentes sobre nuestros servicios de mantenimiento y recuperación de lagos y lagunas.',
};
---

<Layout>
  <SeoHead title={SeoContent.title} description={SeoContent.description} />
  <Fragment slot="main">
    <main class="min-h-[60vh] py-12">
      <h1 class="text-primary mb-4 text-3xl font-bold">Preguntas Frecuentes</h1>
      <p class="text-foreground/80 text-lg">
        Aquí se responden las preguntas frecuentes de los usuarios.
      </p>
    </main>
  </Fragment>
</Layout>
