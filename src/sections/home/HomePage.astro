---
import { DropMagnifying, Mail, Pin, ShieldEngine, WaterReclying, WhatsApp } from '@icons';
import AboutUsSection from './components/AboutUsSection.astro';
import ClientsSection from './components/ClientsSection.astro';
import HeroSection from './components/HeroSection.astro';
import type { AboutUsProps } from './types/AboutUs';
import type { ClientsProps } from './types/Clients';
import type { ContactSectionProps } from './types/Contact';
import type { HeroProps } from './types/Hero';
