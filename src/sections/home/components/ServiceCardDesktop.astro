---
import type { ServiceCardDesktopProps } from '../types/ServiceCard.types';

const { title, Icon, viewMoreText } = Astro.props as ServiceCardDesktopProps;
---

<div
  class="service-card group hidden h-[240px] w-full max-w-[220px] min-w-[180px] flex-1 cursor-pointer md:block"
>
  <div class="service-card__inner">
    <!-- Animated Content (Icon + Title) -->
    <div
      class="flex flex-col items-center transition-transform duration-500 ease-out group-hover:-translate-y-8"
    >
      <div class="text-primary flex h-20 w-20 items-center justify-center rounded-xl p-2">
        <Icon class="h-full w-full" />
      </div>
      <h4 class="text-primary mt-2 text-center leading-tight font-bold">
        {title}
      </h4>
    </div>

    <!-- Animated Button Overlay -->
    <div
      class="pointer-events-none absolute right-0 bottom-6 left-0 flex translate-y-10 justify-center px-6 opacity-0 transition-all delay-75 duration-500 ease-out group-hover:pointer-events-auto group-hover:translate-y-0 group-hover:opacity-100"
    >
      <a
        href="/servicios"
        role="button"
        class="text-primary border-primary hover:bg-primary cursor-pointer rounded-full border px-4 py-2 text-sm font-semibold transition-colors duration-300 hover:text-white"
      >
        {viewMoreText}
      </a>
    </div>
  </div>
</div>
